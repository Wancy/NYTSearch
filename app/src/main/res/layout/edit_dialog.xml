<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="81dp"
        android:text="@string/beginDate"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/etDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/hint2"
        android:layout_alignBaseline="@+id/tvDate"
        android:layout_alignBottom="@+id/tvDate"
        android:layout_toEndOf="@+id/tvDate"
        android:layout_marginStart="28dp" />

    <TextView
        android:id="@+id/tvOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort"
        android:layout_below="@+id/etDate"
        android:layout_alignEnd="@+id/tvDate"
        android:layout_marginTop="33dp" />

    <Spinner
        android:id="@+id/mySpinner"
        android:layout_width="wrap_content"
        android:entries="@array/planets_array"
        android:prompt="@string/planets_prompt"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tvOrder"
        android:layout_alignStart="@+id/checkbox_fashion" />

    <TextView
        android:id="@+id/tvCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/checkBox"
        android:layout_below="@+id/mySpinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="70dp" />



    <CheckBox android:id="@+id/checkbox_arts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvCheck"
        android:layout_centerHorizontal="true"
        android:text="@string/arts" />
    <CheckBox android:id="@+id/checkbox_fashion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkbox_arts"
        android:layout_centerHorizontal="true"
        android:text="@string/fashion" />
    <CheckBox android:id="@+id/checkbox_sports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkbox_fashion"
        android:layout_centerHorizontal="true"
        android:text="@string/sports" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/save"
        android:layout_below="@+id/checkbox_sports"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

</RelativeLayout>